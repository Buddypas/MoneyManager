<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/title_txt"
        style="?attr/textAppearanceHeadline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Dashboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <TextView-->
    <!--        android:id="@+id/wallet_txt"-->
    <!--        style="?attr/textAppearanceHeadline4"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="24dp"-->
    <!--        android:text="Wallet name"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/title_txt" />-->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wallet_dropdown_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:hint="Wallet name"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconDrawable="@drawable/arrow_down"
        app:hintAnimationEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_txt">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/wallet_dropdown"
            style="?attr/textAppearanceHeadline4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/income_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="@id/income_txt"
        app:layout_constraintEnd_toEndOf="@id/income_lbl"
        app:layout_constraintStart_toStartOf="@id/income_lbl"
        app:layout_constraintTop_toTopOf="@id/income_lbl" />

    <TextView
        android:id="@+id/income_lbl"
        style="?attr/textAppearanceHeadline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:drawableTint="@color/green"
        android:text="Income"
        app:drawableEndCompat="@drawable/arrow_down_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wallet_dropdown_layout" />

    <TextView
        android:id="@+id/income_txt"
        style="?attr/textAppearanceHeadline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="8dp"
        android:text="650"
        app:layout_constraintEnd_toEndOf="@id/income_lbl"
        app:layout_constraintStart_toStartOf="@id/income_lbl"
        app:layout_constraintTop_toBottomOf="@id/income_lbl" />

    <View
        android:id="@+id/expense_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="@id/expense_txt"
        app:layout_constraintEnd_toEndOf="@id/expense_lbl"
        app:layout_constraintStart_toStartOf="@id/expense_lbl"
        app:layout_constraintTop_toTopOf="@id/expense_lbl" />

    <TextView
        android:id="@+id/expense_lbl"
        style="?attr/textAppearanceHeadline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp"
        android:text="Expense"
        android:drawableTint="@color/red"
        app:drawableEndCompat="@drawable/arrow_up_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wallet_dropdown_layout" />

    <TextView
        android:id="@+id/expense_txt"
        style="?attr/textAppearanceHeadline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="8dp"
        android:text="500"
        app:layout_constraintEnd_toEndOf="@id/expense_lbl"
        app:layout_constraintStart_toStartOf="@id/expense_lbl"
        app:layout_constraintTop_toBottomOf="@id/expense_lbl" />

    <TextView
        android:id="@+id/balance_lbl"
        style="?attr/textAppearanceHeadline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:text="Balance"
        android:drawableTint="@color/purple_500"
        android:textSize="28sp"
        app:drawableEndCompat="@drawable/ic_balance"
        app:layout_constraintEnd_toStartOf="@id/expense_txt"
        app:layout_constraintStart_toEndOf="@id/income_txt"
        app:layout_constraintTop_toBottomOf="@id/income_txt" />

    <TextView
        android:id="@+id/balance_txt"
        style="?attr/textAppearanceHeadline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="150"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@id/balance_lbl"
        app:layout_constraintStart_toStartOf="@id/balance_lbl"
        app:layout_constraintTop_toBottomOf="@id/balance_lbl" />


</androidx.constraintlayout.widget.ConstraintLayout>